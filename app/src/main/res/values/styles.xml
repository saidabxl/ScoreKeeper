<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#558B2F</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#558B2F</item>
        <item name="android:textColor">#fff</item>


    </style>

    <style name="MyButtonStyleSmall" parent="android:Widget.Button.Small">
        <!--Customizations -->
        <item name="android:minHeight">50dp</item>
        <item name="android:minWidth">60dp</item>

    </style>

    <style name="RelativeLayout1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>


    </style>

    <style name="imageview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:scaleY">1</item>
        <item name="android:contentDescription">@string/image</item>

    </style>

    <style name="LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>

    </style>

    <style name="LinearLayout2">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">@dimen/margin_24</item>
        <item name="android:layout_marginRight">@dimen/margin_24</item>
    </style>

    <style name="text1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/marginTop</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_score</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@color/textColor1</item>

    </style>

    <style name="text2">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_score</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="btn1">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/marginTop</item>
        <item name="android:background">@color/back</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:onClick">goalsTeamA</item>

    </style>

    <style name="btn2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/marginTop</item>
        <item name="android:background">@color/back</item>
        <item name="android:gravity">center</item>
        <item name="android:onClick">teamAPenalty</item>


    </style>

    <style name="btn3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/marginTop</item>
        <item name="android:background">@color/back</item>
        <item name="android:textColor">@color/backg</item>
        <item name="android:onClick">yellowCardForTeamA</item>

    </style>

    <style name="btn4">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/marginBottom2</item>
        <item name="android:layout_marginTop">@dimen/marginTop</item>
        <item name="android:background">@color/back</item>
        <item name="android:textColor">@color/backgr</item>
        <item name="android:onClick">redCardForTeamA</item>

    </style>

    <style name="text3">

        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/marginTop</item>
        <item name="android:textColor">@color/background</item>


    </style>

    <style name="LinearLayout3">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft</item>
        <item name="android:layout_marginRight">@dimen/marginRight</item>

    </style>

    <style name="text4">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/marginTop</item>
        <item name="android:background">@color/textColor1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/back</item>
        <item name="android:textSize">@dimen/text_size_team_name</item>


    </style>

    <style name="text5">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/back</item>
        <item name="android:textSize">@dimen/text_size_score</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="btn5">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/marginTop</item>
        <item name="android:background">@color/back</item>
        <item name="android:onClick">goalForTeamB</item>
        <item name="android:textColor">@color/text2</item>

    </style>

    <style name="btn6">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/marginTop</item>
        <item name="android:background">@color/back</item>
        <item name="android:onClick">teamBPenalty</item>


    </style>


    <style name="btn7">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/marginTop</item>
        <item name="android:background">@color/back</item>
        <item name="android:textColor">@color/backg</item>
        <item name="android:onClick">yellowCardForTeamB</item>


    </style>


    <style name="btn8">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/marginBottom2</item>
        <item name="android:layout_marginTop">@dimen/marginTop</item>
        <item name="android:background">@color/back</item>
        <item name="android:textColor">@color/backgr</item>
        <item name="android:onClick">redCardForTeamB</item>

    </style>


    <style name="Relativelayout">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>


    </style>

    <style name="btn9">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginEnd">96dp</item>
        <item name="android:layout_marginRight">96dp</item>
        <item name="android:onClick">resetScore</item>
        <item name="android:scaleY">1</item>

    </style>


</resources>

